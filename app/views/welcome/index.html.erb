<div class="container">
  <div class="row">

    <div class="col s12 m4" id="robbie">
      <h4 class="title">Robbie Lane</h4>
      <h6 class="subtitle">Developer / Photographer</h6>
      <%= image_tag('robbie-1_lowrez.jpg', class: 'avatar') %>
      <div class="row">
        <div class="col s3"><%= link_to image_tag('github_alt.png'), '#' %></div>
        <div class="col s3"><%= link_to image_tag('twitter.png'), '#' %></div>
        <div class="col s3"><%= link_to image_tag('facebook.png'), '#' %></div>
        <div class="col s3"><%= link_to image_tag('500px.png'), '#' %></div>
      </div>
    </div>

    <div class="col s12 m8" id="recent-activity">
      <h4 class="header-font">Recent Activity</h4>
      <div class="posts">
        <%= render partial: 'recent', locals: {posts: @recent} %>
      </div>
    </div>

  </div>
</div>
