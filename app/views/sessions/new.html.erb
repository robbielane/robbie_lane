<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
        <h4 class="header-font">Login</h4>
        <%= form_for :session, url: login_path do |f| %>
          <%= f.label :username %>
          <%= f.text_field :username, autofocus: true %>
          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.submit "Submit", class: 'btn' %>
        <% end %>
    </div>
  </div>
</div>
