<div class="container">
  <%= link_to svg_tag('left-arrow.svg', class: 'icon left-arrow'), root_path %>
  <% @posts.each do |post| %>
    <div class="post clickable" data-link="<%= post_path(slug: post.slug) %>">
      <h4> <%= post.title %> </h4>
      <h6> <%= format_date post.created_at %> </h6>
      <p> <%= markdown format_post_body(post.body) %> </p>
    </div>
  <% end %>
</div>
